.mainView {
    width:100%;
    height:100%;
    display:flex;
    flex-flow:column;
    justify-content:flex-start;
    align-items:flex-start;
}

.searchView
{
    width:700rpx;
    height:50rpx;
    border-style:solid;
    border-width:2rpx;
    border-radius:50rpx;
    border-color:black;
    display:flex;
    flex-flow:row;
    align-self:center;
    justify-content:flex-start;
    align-items:center;
    padding:10rpx;
    margin:40rpx;
}

.contentView
{
    width:100%;
    display:flex;
    flex-flow:column;
    justify-content:flex-start;
    align-items:flex-start;
}

.btnBarView
{
    width:100%;
    height:50rpx;
    display:flex;
    flex-flow:row;
    justify-content:flex-start;
    align-items:center;
}

.tabView
{
    width:50%;
    display:flex;
    flex-flow:row;
    justify-content:center;
    align-items:center;
}

.tabBarText
{
    color:black;
}

.tabBarText.active
{
    color:red;
}

.cellView
{
    background-color:white;
    max-width:100%;
    margin-left:10rpx;
    margin-right:10rpx;
    margin-top:10rpx;

}

.hotImage
{
    flex:0 0 33.33%;
    max-width:33.33%;
    box-sizing:border-box;
    height:250rpx;
}
