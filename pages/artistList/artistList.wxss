.contentView
{
    width:100%;
    display:flex;
    flex-flow:column;
    justify-content:flex-start;
    align-items:flex-start;
}

.btnBarView
{
    background-color:white;
    width:100%;
    height:80rpx;
    display:flex;
    flex-flow:row;
    justify-content:flex-start;
    align-items:center;
}

.tabView
{
    width:50%;
    display:flex;
    flex-flow:row;
    justify-content:center;
    align-items:center;
}

.tabBarText
{
    font-size:50rpx;
    color:black;
}

.tabBarText.active
{
    color:red;
}

.cellView
{
    background-color:white;
    max-width:100%;
    height:400rpx;
    margin-left:10rpx;
    margin-right:10rpx;
    margin-top:30rpx;
}

.hotImage
{
    width:33.33333%;
    height:250rpx;
}
